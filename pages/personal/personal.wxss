.personalContainer .user-section {
  height: 520rpx;
  position: relative;
  padding: 100rpx 30rpx 0;
}
.user-section .bg {
  height: 100%;
  width: 100%;
  opacity: 0.7;
  position: absolute;
  left: 0;
  top: 0;
}
.user-section .user-info-box {
  height: 180rpx;
  display: flex;
  position: relative;
  z-index: 1;
  align-items: center;
}
.portrait-box image {
  height: 130rpx;
  width: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.user-section .name-box {
  font-size: 24;
  color: #303133;
  margin-left: 20rpx;
}

.user-section .vip-card-box {
  position: relative;
  background: rgba(0, 0, 0, 0.7);
  height: 240rpx;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
  color: #f7d680;
}
.vip-card-box .vip-bg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}
.card-header .tit {
  font-size: 22rpx;
  color: #f7d680;
}
.card-header .btn {
  position: relative;
  font-size: 22rpx;
  color: #36343c;
  border-radius: 20px;
  background: #f9e6af;
  padding: 10rpx;
}
.vip-card-box .desc1 {
  font-size: 34rpx;
  margin-top: 10rpx;
}
.vip-card-box .desc2 {
  font-size: 24rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}

/* 操作栏 */
.cover-container {
  margin-top: -150rpx;
  padding: 0 30rpx;
  position: relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}
.cover-container .arc {
  width: 100%;
  height: 36rpx;
  position: absolute;
  top: -34rpx;
  left: 0;
}

.cover-container .nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}
.nav-section .nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  box-sizing: border-box;
}
.nav-section .nav-item .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}

.personalContent {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 15rpx;
}
.recentPlayContainer .title {
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}

.cardList {
  margin-top: 20rpx;
}
.cardList .card-item {
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}

.recentPlayScroll {
  display: flex;
  height: 210rpx;
  margin-top: 5px;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
